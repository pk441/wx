@import "../../static/iconfont.wxss";

.container {
  /* flex不用设置宽度 */
  height: 260px;
  padding: 10px;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin-top:5px;
  margin-bottom:3px;
  border-bottom: 2px solid gray;
}

.header {
  flex-grow: 1;
  flex-basis: 0;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: flex-start;
}

/* 微信小程序中image标签有默认高度 */
/* 头像是选择圆形的 */
.header image {
  position: absolute;
  width: 50px;
  height: 50px;
  justify-content: center;
}

.content {
  flex-grow: 5;
  flex-basis: 0;
  display: flex;
  flex-direction: column;
}

.content .content_1 {
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: space-between;
  flex-grow: 0;
}

.content .content_1 view {
  display: flex;
  justify-content: center;
  align-items: center;
}

.content .content_1 .txt {
  font-size: 15px;
  color: rgb(27, 234, 220);
  font-style: initial;
}

.iconfont icon-gengduo {
  display: flex;
  align-items: center;

}

/* 设置button的大小 */
.content .content_1 view button {
  display: flex;
  justify-content: center;
  font-size: 10px;
  text-align: center;
  align-items: center;
  margin-right: 5px;
  color: rgb(240, 73, 42);
  border: 2px solid rgb(240, 73, 42);
}

.content .content_2 {
  /* rpx的尺寸比px要小 */
  padding: 4px;
  flex-grow: 2;
  font-family: serif;
  font-size: x-small;
  overflow: hidden;
  /* 不显示省略号？ */
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.content .content_3 {
  flex-grow: 6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.conntent_3_image{
  display: flex;
  justify-content: flex-start;
}
.content_3 image {
  display: flex;
  justify-content: flex-start;
  width: 30vw;
  height: 160px;
}

.content_3 view {
  display: flex;
  align-items: center;
  margin-top: 15rpx;
}

.content_3 view .time {
  margin-right: 40%;
  color: gray;
  font-family: Arial, Helvetica, sans-serif;
  font-size: xx-small;
}

.icon {
  display: flex;
  width: 35%;
  justify-content: space-between;
  align-items: center;
}